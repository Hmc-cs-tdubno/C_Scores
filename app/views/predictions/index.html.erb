    	<td><%=number_field_tag 'Contributor:'%></td>
    	<td><%=number_field_tag 'Challenger:'%></td>
	</tr>

	<tr>
    	<td><%=label_tag 'Team Member 3' %></td>
    	<td><%=number_field_tag 'Collaborator:'%></td>
    	<td><%=number_field_tag 'Comunicator:'%></td>
    	<td><%=number_field_tag 'Contributor:'%></td>
    	<td><%=number_field_tag 'Challenger:'%></td>
	</tr>

	<tr>
    	<td><%=label_tag 'Team Member 4' %></td>
    	<td><%=number_field_tag 'Collaborator:'%></td>
    	<td><%=number_field_tag 'Comunicator:'%></td>
    	<td><%=number_field_tag 'Contributor:'%></td>
    	<td><%=number_field_tag 'Challenger:'%></td>
	</tr>

    <div><%= submit_tag 'Submit' %></div>
<% end -%>


